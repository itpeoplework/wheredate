    <script>
        // Draw connections between nodes
        document.addEventListener('DOMContentLoaded', function() {
            // Get node positions
            const databaseNode = document.querySelector('.node-database');
            const apiNode = document.querySelector('.node-api');
            const cloudNode = document.querySelector('.node-cloud');
            const iotNode = document.querySelector('.node-iot');
            const centralNode = document.querySelector('.node-central');
            
            // Get connection elements
            const conn1 = document.getElementById('conn1');
            const conn2 = document.getElementById('conn2');
            const conn3 = document.getElementById('conn3');
            const conn4 = document.getElementById('conn4');
            
            // Function to draw a connection between two nodes
            function drawConnection(conn, fromNode, toNode) {
                const fromRect = fromNode.getBoundingClientRect();
                const toRect = toNode.getBoundingClientRect();
                const containerRect = document.querySelector('.visualization').getBoundingClientRect();
                
                const fromX = fromRect.left + fromRect.width/2 - containerRect.left;
                const fromY = fromRect.top + fromRect.height/2 - containerRect.top;
                const toX = toRect.left + toRect.width/2 - containerRect.left;
                const toY = toRect.top + toRect.height/2 - containerRect.top;
                
                // Calculate distance and angle
                const length = Math.sqrt(Math.pow(toX - fromX, 2) + Math.pow(toY - fromY, 2));
                const angle = Math.atan2(toY - fromY, toX - fromX) * 180 / Math.PI;
                
                // Set connection styles
                conn.style.width = length + 'px';
                conn.style.left = fromX + 'px';
                conn.style.top = fromY + 'px';
                conn.style.transform = `rotate(${angle}deg)`;
            }
            
            // Draw all connections
            drawConnection(conn1, databaseNode, centralNode);
            drawConnection(conn2, apiNode, centralNode);
            drawConnection(conn3, cloudNode, centralNode);
            drawConnection(conn4, iotNode, centralNode);
            
            // Add interactivity to source items
            const sourceItems = document.querySelectorAll('.source-item');
            sourceItems.forEach(item => {
                item.addEventListener('click', function() {
                    // Remove active class from all items
                    sourceItems.forEach(i => i.classList.remove('active'));
                    // Add active class to clicked item
                    this.classList.add('active');
                    
                    // Add pulse animation to corresponding node
                    const nodes = document.querySelectorAll('.node');
                    nodes.forEach(node => node.classList.remove('pulse'));
                    
                    if (this.querySelector('.source-icon').textContent === 'üìä') {
                        document.querySelector('.node-database').classList.add('pulse');
                    } else if (this.querySelector('.source-icon').textContent === 'üîó') {
                        document.querySelector('.node-api').classList.add('pulse');
                    } else if (this.querySelector('.source-icon').textContent === '‚òÅÔ∏è') {
                        document.querySelector('.node-cloud').classList.add('pulse');
                    } else if (this.querySelector('.source-icon').textContent === 'üì°') {
                        document.querySelector('.node-iot').classList.add('pulse');
                    }
                });
            });
            
            // Add animation to nodes when hovering over connections
            const connections = document.querySelectorAll('.connection');
            connections.forEach(conn => {
                conn.addEventListener('mouseover', function() {
                    this.style.background = 'rgba(255, 255, 255, 0.8)';
                });
                
                conn.addEventListener('mouseout', function() {
                    this.style.background = 'rgba(255, 255, 255, 0.5)';
                });
            });
        });
    </script>
